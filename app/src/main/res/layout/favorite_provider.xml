<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="5dp"
    app:cardElevation="5dp"
    app:cardCornerRadius="5dp"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/providerPicture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="5dp"
                app:civ_border_width=".5dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_person_black_24dp"
                tools:src="@tools:sample/avatars"
                android:layout_marginStart="20dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_margin="8dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <com.albassami.logistics.NewUtilsAndPref.CustomText.CustomRegularTextView
                    android:id="@+id/providerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textSize="16sp" />
                <com.albassami.logistics.NewUtilsAndPref.CustomText.CustomRegularTextView
                    android:id="@+id/providerMobile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:visibility="gone"
                    android:textSize="16sp" />


                <com.aurelhubert.simpleratingbar.SimpleRatingBar
                    android:id="@+id/rating"
                    android:layout_width="130dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="-20dp"
                    android:layout_marginTop="7dp"
                    app:drawablePadding="5dp"
                    app:enable="false"
                    app:maxRating="5"
                    app:rating="0"
                    android:layout_marginStart="-20dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/favOrNot"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_favorite_red_24dp"
                android:layout_marginEnd="20dp" />
        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>