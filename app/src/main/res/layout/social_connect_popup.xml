<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/backBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:srcCompat="@drawable/back" />


    <com.albassami.logistics.NewUtilsAndPref.CustomText.CustomLightTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/back_social"
        android:layout_marginLeft="30dp"
        android:text="@string/txt_choose_account"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_marginStart="30dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/lay_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/ic_facebook" />

        <com.albassami.logistics.NewUtilsAndPref.CustomText.CustomLightTextView
            android:id="@+id/btn_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_social"
            android:layout_marginLeft="10dp"
            android:text="@string/txt_fb"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/lay_google"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_marginStart="30dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/ic_search" />

        <com.albassami.logistics.NewUtilsAndPref.CustomText.CustomLightTextView
            android:id="@+id/btn_gmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/back_social"
            android:layout_marginLeft="10dp"
            android:text="@string/txt_gm"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginStart="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="5dp"
        android:background="@color/black" />
</LinearLayout>