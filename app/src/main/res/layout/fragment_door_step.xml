<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btnBack"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/ic_action_back_green"
                    android:padding="10dp">

                </ImageView>

                <RelativeLayout
                    android:id="@+id/barMainLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_toEndOf="@+id/btnBack">

                    <ImageView
                        android:id="@+id/ivIcon"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/icon_car_shipping" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_toEndOf="@+id/ivIcon"
                        android:text="@string/delivery_home"
                        android:textColor="@color/black"
                        android:textSize="18dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/tvTitle"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginEnd="30dp"
                        android:layout_toEndOf="@+id/ivIcon"
                        android:text="@string/form_detail_door_to_door"
                        android:textColor="@color/dark_grey"
                        android:textSize="15dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1.5dp"
                    android:layout_below="@+id/barMainLayout"
                    android:background="@color/colorAccent"></RelativeLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvHomePick"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/white_with_corner"
                android:gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="@string/pick_up_from_home"
                android:textColor="@color/colorAccent"
                android:textSize="14dp">

            </TextView>

            <TextView
                android:id="@+id/tvHomeDeliver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:background="@drawable/white_with_corner"
                android:gravity="center_horizontal"
                android:paddingStart="20dp"
                android:paddingTop="10dp"
                android:paddingEnd="20dp"
                android:paddingBottom="10dp"
                android:text="@string/deliver_to_home"
                android:textColor="@color/colorAccent"
                android:textSize="14dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_door"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="vertical"
            android:visibility="visible">

            <AutoCompleteTextView
                android:id="@+id/atvAgreement"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="end"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_with_corner"
                android:drawableEnd="@drawable/ic_action_down_arrow"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_vertical"
                android:hint="@string/agreement_number"
                android:paddingStart="5dp"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/deep_grey"
                android:textSize="14sp">

            </AutoCompleteTextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/atvBranch"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/white_with_corner"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:gravity="center_vertical"
                    android:hint="@string/city"
                    android:paddingStart="5dp"
                    android:paddingEnd="20dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/deep_grey">

                </EditText>
            </LinearLayout>

            <EditText
                android:id="@+id/etReceipt"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_with_corner"
                android:drawableEnd="@drawable/ic_action_location"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/txt_current_location"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/deep_grey">

            </EditText>

            <EditText
                android:id="@+id/etdest"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white_with_corner"
                android:drawableEnd="@drawable/ic_action_location"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:gravity="center_horizontal|center_vertical"
                android:hint="@string/txt_dest_hint"
                android:paddingEnd="20dp"
                android:textColor="@color/black"
                android:textColorHint="@color/deep_grey"
                android:visibility="gone">

            </EditText>

            <TextView
                android:id="@+id/textView53"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@+id/ivIcon"
                android:layout_toRightOf="@+id/ivIcon"
                android:text="@string/leave_comment"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="30dp"
                android:background="@drawable/grey_border" />

            <LinearLayout
                android:id="@+id/paymethods"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:background="@drawable/image_cash_payment" />

                        <TextView
                            android:id="@+id/tvCash1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="4dp"
                            android:background="@drawable/rounded_grey"
                            android:paddingStart="20dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="20dp"
                            android:paddingBottom="4dp"
                            android:text="@string/txt_cash"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp">

                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="130dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/image_accepted_cards" />

                        <TextView
                            android:id="@+id/tvCard1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginTop="7dp"
                            android:background="@drawable/rounded_grey"
                            android:gravity="center"
                            android:paddingStart="35dp"
                            android:paddingTop="4dp"
                            android:paddingEnd="35dp"
                            android:paddingBottom="4dp"
                            android:text="@string/credit_card"
                            android:textColor="@color/colorAccent"
                            android:textSize="14sp">

                        </TextView>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnNext"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/app_theam"
                android:paddingStart="60dp"
                android:paddingEnd="60dp"
                android:text="@string/total_cost_door_to_door"
                android:textAlignment="viewStart"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>